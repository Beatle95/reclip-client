QWidget {
  color: #e5e5e5;
  font-family: Segoe UI, sans-serif;
  font-size: 12pt;
}

QWidget#ContentWindowWidget {
  background-color: #1c1c1c;
}

QWidget#HostClipboardView {
  background-color: #222222;
  border: 1px solid #333333;
}

QWidget#TextView {
  background-color: #303030;
  border: 1px solid #444444;
  border-radius: 4px;
}

QWidget#TextView:hover {
  background-color: #444444;
}

QLabel#HostName {
  font-weight: bold;
  font-size: 16px;
  padding: 10px 0px;
}
